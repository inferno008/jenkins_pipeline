pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo "building the project"
            }
        }
    }
    post {
        success {
            emailext attachLog: true, body: 'jenkins', subject: 'test email success', to: 'mbuvan75@gmail.com'
        }
        failure {
            emailext attachLog: true, body: 'jenkins', subject: 'test email failure', to: 'mbuvan75@gmail.com'
        }
    }
}


